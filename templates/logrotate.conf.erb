<% @confs.each do |conf| %>
<%= conf[:path] %> {
  <% if conf[:frequency] %>
  <%= conf[:frequency] %>
  <% end %>
  <% if conf[:rotate] %>
  rotate <%= conf[:rotate] %>
  <% end %>
  <% conf[:options] && conf[:options].each do |name| %>
  <%= name %>
  <% end %>
  <% %w(firstaction prerotate postrotate lastaction).each do |script| %>
    <% if conf[script.to_sym] %>
  <%= script %>
  <%= conf[script.to_sym] %>
  endscript
    <% end %>
  <% end %>
}

<% end %>
